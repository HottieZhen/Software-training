<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>登录</title>
    <link rel="stylesheet" href="https://unpkg.com/element-ui/lib/theme-chalk/index.css">
</head>
<body>
    <el-container id="container" style=" width:100%; height:800px; background-color: darkseagreen ">
        <el-main>
            <el-card style="width: 500px; height: 350px; margin:200px auto">
                <el-row>
                    <el-col>
                        <h1 style="text-align: center;font-size:30px">登录</h1>
                    </el-col>
                    <hr>
                </el-row>
                <el-row>
                    <el-form :modal="user" label-width="auto">
                        <el-form-item label="登录">
                            <el-input v-model="user.username"></el-input>
                        </el-form-item>
                        <el-form-item label="密码">
                            <el-input v-model="user.password" :show-password="true"></el-input>
                        </el-form-item>
                        <el-row>
                            <el-col span="12" align="center"><el-button round="true" size="medium" type="primary" icon="el-icon-right">登录</el-button></el-col>
                            <el-col span="12" align="center"><el-button round="true" size="medium" type="primary" icon="el-icon-right" v-on:click="onClick">注册</el-button></el-col>
                        </el-row>
                    </el-form>
                </el-row>
            </el-card>
        </el-main>
    </el-container>
</body>
<script src="https://cdn.jsdelivr.net/npm/vue/dist/vue.js"></script>
<script src="https://unpkg.com/element-ui/lib/index.js"></script>
<script>
    const app = new Vue({
        el: '#container',
        data:  {
            user:{
                username:"",
                password:""
            }
        },
        methods: {
            onClick() {
                window.location = "/login/Register";
            }
        }
    })
</script>
</html>
